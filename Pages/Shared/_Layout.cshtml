<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <meta
      name="description"
      content="Web site created using ASP.Net"
    />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>       
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" 
      integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" 
      crossorigin="anonymous" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <title>Books R Us</title>
    <script>
      // hide/show glyphicons
      //check user login status
      $(document).ready(function() {
        if (sessionStorage.getItem('userId')) {
          $("#glyphSignUp").css("display", "none");
          $("#glyphLogin").css("display", "none"); 
          $("#glyphAccount").css("visibility", "visible");
          $("#glyphLogout").css("visibility", "visible");
       }
        else {
          $("#glyphSignUp").css("visibility", "visible");
          $("#glyphLogin").css("visibility", "visible"); 
          $("#glyphAccount").css("visibility", "hidden");
          $("#glyphLogout").css("visibility", "hidden");
        }
      });

     function closeModal() {
        var modal = document.getElementById("myModal");
        modal.style.display = "none";
        window.location.href = "/Books";

      }

    </script>

    <style>
      .navbar-nav > li > a:hover, .navbar-nav > li > a:focus {
          background-color:blue;
      }

      #spanClose:hover, #spanClose:focus {
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-3">
          <div class="container">
              <a class="navbar-brand" style="color:white">Books R Us</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                      aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                  <ul class="navbar-nav flex-grow-1">
                      <li class="nav-item">
                          <a class="nav-link text-white" href="/">Home</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link text-white" href="/Books">Browse</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li id="glyphSignUp"><a href="/SignUp" style="color:white"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                  <li id="glyphLogin"><a href="/Login" style="color:white"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                  <li id="glyphAccount"><a href="/YourAccount" style="color:white"><span class="glyphicon glyphicon-list-alt"></span> Your Account</a></li>
                  <li id="glyphLogout"><a href="/Logout" style="color:white"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                </ul>
            </div>
          </div>
      </nav>
  </header>
  <noscript>You need to enable JavaScript to run this app.</noscript>

  <!-- The Modal -->
  <div id="myModal" class="modal" role="dialog">
  <!-- Modal content -->
    <div class="modal-content">
      <div class="modal-header">
        <h3 id="modal-title" class="modal-title w-100">Success</h3><span id="spanClose" onclick="closeModal()">&times;</span>
          <!-- <p><u>Success</u></p> -->
      </div>
      <div class="modal-body">
        <p id="para-content" style="font-size:large"></p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" onclick="closeModal()">Close</button>
      </div>
    </div>
  </div>

  <div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
  </div>

  <!-- Page Footer -->
  <footer class="border-top footer text-black">
    <div class="container">
        &copy; 2022 - Books R Us
    </div>
  </footer>
  </body>
</html>
